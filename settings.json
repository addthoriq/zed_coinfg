{
  "outline_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "right"
  },
  "languages": {
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on"
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "ignore": ["*"]
        }
      }
    }
  },
  "cursor_blink": false,
  "relative_line_numbers": true,
  "vertical_scroll_margin": 0,
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ayu Mirage"
  },
  "preferred_line_length": 120,
  "soft_wrap": "preferred_line_length",
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "completion_documentation_secondary_query_debounce": 10,
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "double_click_in_multibuffer": "open"
}
